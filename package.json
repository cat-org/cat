{
  "private": true,
  "name": "@mikojs/core",
  "version": "2.0.0-beta.0",
  "license": "MIT",
  "scripts": {
    "build": "yarn workspaces exec -p $(yarn variables:babel) --root-mode upward",
    "build:plugins": "yarn workspaces exec -p yarn plugin build",
    "dev": "yarn workspaces exec --git-range $(git branch --show-current) -p $(yarn variables:babel) --root-mode upward -w",
    "postinstall": "yarn workspaces exec $(yarn variables:basic:scope) -p $(yarn variables:babel) --presets @babel/env",
    "prod": "NODE_ENV=production yarn build",
    "variables:babel": "echo \"yarn run --top-level babel src -d lib --verbose\"",
    "variables:basic:scope": "echo \"--include @mikojs/babel-preset-miko --include @mikojs/commands\""
  },
  "workspaces": [
    "packages/*",
    "yarn-plugins/*",
    "configs/*"
  ],
  "devDependencies": {
    "@babel/cli": "^7.13.16",
    "@babel/core": "^7.14.0",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/plugin-proposal-decorators": "^7.13.15",
    "@mikojs/babel-preset-miko": "workspace:^2.0.0-beta.0",
    "@mikojs/lint-staged-config": "workspace:^2.0.0-beta.0",
    "@mikojs/prettier-config": "workspace:^2.0.0-beta.0",
    "@yarnpkg/builder": "^2.1.3",
    "babel-plugin-add-module-exports": "^1.0.4",
    "lint-staged": "^11.0.0",
    "prettier": "^2.2.1",
    "typescript": "^4.2.4"
  },
  "engines": {
    "node": ">= 14.x",
    "npm": ">= 6.x",
    "yarn": ">= 2.x"
  }
}
