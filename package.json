{
  "private": true,
  "name": "@mikojs/core",
  "version": "2.0.0-beta.0",
  "license": "MIT",
  "scripts": {
    "build:plugins": "yarn workspaces exec -p yarn plugin build",
    "babel:command": "echo \"run --top-level babel src -d lib --verbose\"",
    "dev": "yarn workspaces exec --git-range $(git branch --show-current) -p yarn $(yarn babel:command) --root-mode upward -w",
    "build": "yarn workspaces exec -p yarn $(yarn babel:command) --root-mode upward",
    "prod": "NODE_ENV=production yarn build",
    "postinstall": "yarn workspace @mikojs/babel-preset-base $(yarn babel:command) --presets @babel/env"
  },
  "workspaces": ["packages/*", "yarn-plugins/*"],
  "engines": {
    "node": ">= 14.x",
    "npm": ">= 6.x",
    "yarn": ">= 2.x"
  },
  "devDependencies": {
    "@babel/cli": "^7.13.16",
    "@babel/core": "^7.14.0",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/plugin-proposal-decorators": "^7.13.15",
    "@yarnpkg/builder": "^2.1.3",
    "babel-plugin-add-module-exports": "^1.0.4",
    "prettier": "^2.2.1",
    "typescript": "^4.2.4"
  }
}
