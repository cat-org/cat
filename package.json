{
  "private": true,
  "name": "@mikojs/core",
  "license": "MIT",
  "workspaces": ["packages/*", "lerna/*", "babel/*", "server/*"],
  "scripts": {
    "build": "make babel-base-all && miko build",
    "dev": "make babel-base-changed && miko dev",
    "preinstall": "patch-package --reverse || echo \"no patch packages\"",
    "postinstall": "patch-package",
    "install:all": "yarn install && lerna bootstrap && yarn build",
    "prod": "NODE_ENV=production make babel-base-all && miko prod"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-proposal-pipeline-operator": "^7.12.1",
    "@babel/preset-react": "^7.12.10",
    "babel-plugin-add-module-exports": "^1.0.4",
    "babel-plugin-css-modules-transform": "^1.6.2",
    "babel-plugin-relay": "^10.1.2",
    "babel-plugin-transform-imports": "^2.0.0",
    "eslint": "^7.16.0",
    "eslint-watch": "^7.0.0",
    "flow-bin": "^0.141.0",
    "flow-typed": "^3.2.1",
    "graphql": "^15.4.0",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.3",
    "patch-package": "^6.2.2",
    "prettier": "^2.2.1",
    "prettier-package-json": "^2.1.3",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "webpack": "^5.11.0"
  },
  "engines": {
    "node": ">= 10.2.1",
    "npm": ">= 6.1.0",
    "yarn": ">= 1.7.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "make babel-base-changed && miko husky:pre-commit",
      "post-merge": "make babel-base-all && miko husky:post-merge",
      "post-checkout": "make babel-base-changed BRANCH=main && miko husky:post-checkout"
    }
  },
  "resolutions": {
    "semver": "7.3.2"
  }
}
