{
  "private": true,
  "name": "@mikojs/core",
  "license": "MIT",
  "workspaces": ["packages/*", "babel/*", "server/*", "components/*"],
  "scripts": {
    "dev": "make babel-base-changed && configs exec lerna:babel:watch --changed",
    "install:all": "make install-all",
    "prod": "NODE_ENV=production make babel-base-all && configs exec lerna:babel",
    "test": "make babel-base-changed && configs exec lerna:babel --changed && lerna run test --stream && configs test"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.4",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-pipeline-operator": "^7.8.3",
    "@babel/preset-react": "^7.8.3",
    "babel-plugin-add-module-exports": "^1.0.2",
    "babel-plugin-css-modules-transform": "^1.6.2",
    "babel-plugin-relay": "^9.0.0",
    "babel-plugin-transform-imports": "^2.0.0",
    "eslint": "^6.8.0",
    "eslint-watch": "^6.0.1",
    "flow-bin": "^0.118.0",
    "flow-mono-cli": "^1.5.3",
    "flow-typed": "^3.0.0",
    "graphql": "^14.6.0",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "koa": "^2.11.0",
    "lerna": "^3.20.2",
    "lerna-changelog": "^1.0.0",
    "lint-staged": "^10.0.7",
    "prettier": "^1.19.1",
    "prettier-package-json": "^2.1.3",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "webpack": "^4.41.6"
  },
  "engines": {
    "node": ">= 10.2.1",
    "npm": ">= 6.1.0",
    "yarn": ">= 1.7.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "make babel-base-changed && configs exec husky:pre-commit",
      "post-merge": "make babel-base-all && configs exec husky:post-merge",
      "post-checkout": "make babel-base-changed BRANCH=master && configs exec husky:post-checkout"
    }
  }
}
