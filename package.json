{
  "private": true,
  "name": "@mikojs/core",
  "license": "MIT",
  "workspaces": ["packages/*", "babel/*", "server/*", "components/*"],
  "scripts": {
    "build": "make babel-base-all && miko build",
    "dev": "make babel-base-changed && miko dev",
    "install:all": "yarn install && lerna bootstrap && yarn build",
    "prod": "NODE_ENV=production make babel-base-all && miko prod"
  },
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-pipeline-operator": "^7.10.5",
    "@babel/preset-react": "^7.10.4",
    "babel-plugin-add-module-exports": "^1.0.4",
    "babel-plugin-css-modules-transform": "^1.6.2",
    "babel-plugin-relay": "^10.0.1",
    "babel-plugin-transform-imports": "^2.0.0",
    "eslint": "^7.10.0",
    "eslint-watch": "^7.0.0",
    "flow-bin": "^0.135.0",
    "flow-mono-cli": "^1.5.3",
    "flow-typed": "^3.2.1",
    "graphql": "^15.3.0",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "lerna": "^3.22.1",
    "lerna-changelog": "^1.0.1",
    "lint-staged": "^10.4.0",
    "prettier": "^2.1.2",
    "prettier-package-json": "^2.1.3",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "webpack": "^4.44.2"
  },
  "engines": {
    "node": ">= 10.2.1",
    "npm": ">= 6.1.0",
    "yarn": ">= 1.7.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "make babel-base-changed && miko husky:pre-commit",
      "post-merge": "make babel-base-all && miko husky:post-merge",
      "post-checkout": "make babel-base-changed BRANCH=master && miko husky:post-checkout"
    }
  }
}
