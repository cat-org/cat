{
  "private": true,
  "name": "@cat-org/core",
  "license": "MIT",
  "workspaces": ["packages/*", "babel/*", "server/*"],
  "scripts": {
    "clean": "make clean",
    "dev": "make babel-changed WATCH=-w",
    "install:all": "make install",
    "prod": "NODE_ENV=production make babel-all",
    "release": "make release",
    "test": "make babel-changed && lerna run test --stream && configs test"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/plugin-proposal-pipeline-operator": "^7.3.2",
    "@babel/plugin-transform-runtime": "^7.4.4",
    "@babel/preset-react": "^7.0.0",
    "@babel/runtime": "^7.4.5",
    "babel-jest": "^24.8.0",
    "babel-plugin-add-module-exports": "^1.0.2",
    "babel-plugin-css-modules-transform": "^1.6.2",
    "babel-plugin-relay": "^5.0.0",
    "babel-plugin-transform-imports": "^1.5.1",
    "eslint": "^6.0.1",
    "eslint-watch": "^5.1.2",
    "fbjs": "^1.0.0",
    "flow-bin": "^0.102.0",
    "flow-typed": "^2.5.2",
    "graphql": "^14.4.0",
    "husky": "^2.7.0",
    "jest": "^24.8.0",
    "lerna": "^3.15.0",
    "lerna-changelog": "^0.8.2",
    "lint-staged": "^8.2.1",
    "prettier": "^1.18.2",
    "prettier-package-json": "^2.1.0"
  },
  "engines": {
    "node": ">= 10.2.1",
    "npm": ">= 6.1.0",
    "yarn": ">= 1.7.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "make babel-changed && configs lint-staged && yarn flow",
      "post-merge": "make babel-all",
      "post-checkout": "make babel-changed BRANCH=master"
    }
  }
}
