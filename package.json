{
  "private": true,
  "name": "@mikojs/core",
  "license": "MIT",
  "workspaces": ["packages/*", "yarn-plugins/*"],
  "scripts": {
    "build": "sh ./.husky/build.sh && miko build",
    "dev": "sh ./.husky/build.sh --since $(git branch --show-current) && miko dev",
    "postinstall": "prettier --write --parser json $(git diff --name-only '*package.json') && husky install && sh ./.husky/build.sh",
    "prod": "sh ./.husky/build.sh && miko prod"
  },
  "devDependencies": {
    "@babel/cli": "^7.13.14",
    "@babel/core": "^7.13.14",
    "@babel/preset-env": "^7.13.12",
    "@mikojs/lerna-run": "workspace:*",
    "@mikojs/miko": "workspace:*",
    "@yarnpkg/builder": "^2.1.3",
    "babel-plugin-add-module-exports": "^1.0.4",
    "core-js": "^3.10.0",
    "eslint": "^7.23.0",
    "eslint-watch": "^7.0.0",
    "flow-bin": "^0.148.0",
    "flow-typed": "^3.3.1",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lerna": "^4.0.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "prettier-package-json": "^2.1.3"
  },
  "engines": {
    "node": ">= 14.x",
    "npm": ">= 6.x",
    "yarn": ">= 2.x"
  }
}
