{
  "private": true,
  "name": "@mikojs/core",
  "license": "MIT",
  "workspaces": ["packages/*", "babel/*", "server/*", "components/*"],
  "scripts": {
    "clean": "make clean",
    "dev": "make babel-changed WATCH=-w",
    "install:all": "make install",
    "prod": "NODE_ENV=production make babel-all",
    "release": "make release",
    "test": "make babel-changed && lerna run test --stream && configs test"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.0",
    "@babel/core": "^7.7.2",
    "@babel/plugin-proposal-class-properties": "^7.7.0",
    "@babel/plugin-proposal-pipeline-operator": "^7.5.0",
    "@babel/plugin-transform-runtime": "^7.6.2",
    "@babel/preset-react": "^7.7.0",
    "@babel/runtime": "^7.7.2",
    "babel-plugin-add-module-exports": "^1.0.2",
    "babel-plugin-css-modules-transform": "^1.6.2",
    "babel-plugin-module-resolver": "^3.2.0",
    "babel-plugin-relay": "^7.0.0",
    "babel-plugin-transform-imports": "^2.0.0",
    "eslint": "^6.6.0",
    "eslint-watch": "^6.0.1",
    "flow-bin": "^0.111.3",
    "flow-typed": "^2.6.2",
    "graphql": "^14.5.8",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "koa": "^2.11.0",
    "lerna": "^3.18.3",
    "lerna-changelog": "^0.8.2",
    "lint-staged": "^9.4.2",
    "prettier": "^1.18.2",
    "prettier-package-json": "^2.1.0",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "webpack": "^4.41.2"
  },
  "engines": {
    "node": ">= 10.2.1",
    "npm": ">= 6.1.0",
    "yarn": ">= 1.7.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "make babel-changed && configs lint-staged && yarn flow",
      "post-merge": "make babel-all",
      "post-checkout": "make babel-changed BRANCH=master"
    }
  }
}
