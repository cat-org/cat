{
  "private": true,
  "name": "@mikojs/core",
  "license": "MIT",
  "workspaces": ["packages/*", "babel/*", "server/*", "components/*"],
  "scripts": {
    "build": "make babel-base-all && miko build",
    "dev": "make babel-base-changed && miko dev",
    "install:all": "yarn install && lerna bootstrap && yarn build && lerna link",
    "prod": "NODE_ENV=production make babel-base-all && miko prod"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-pipeline-operator": "^7.8.3",
    "@babel/preset-react": "^7.9.4",
    "babel-plugin-add-module-exports": "^1.0.2",
    "babel-plugin-css-modules-transform": "^1.6.2",
    "babel-plugin-relay": "^9.0.0",
    "babel-plugin-transform-imports": "^2.0.0",
    "eslint": "^6.8.0",
    "eslint-watch": "^6.0.1",
    "flow-bin": "^0.123.0",
    "flow-mono-cli": "^1.5.3",
    "flow-typed": "^3.1.0",
    "graphql": "^15.0.0",
    "husky": "^4.2.5",
    "jest": "^25.4.0",
    "lerna": "^3.20.2",
    "lerna-changelog": "^1.0.1",
    "lint-staged": "^10.1.6",
    "prettier": "^2.0.4",
    "prettier-package-json": "^2.1.3",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "webpack": "^4.42.1"
  },
  "engines": {
    "node": ">= 10.2.1",
    "npm": ">= 6.1.0",
    "yarn": ">= 1.7.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "make babel-base-changed && miko husky:pre-commit",
      "post-merge": "make babel-base-all && miko husky:post-merge",
      "post-checkout": "make babel-base-changed BRANCH=master && miko husky:post-checkout"
    }
  },
  "resolutions": {
    "semver": "7.2.3"
  }
}
