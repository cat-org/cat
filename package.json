{
  "private": true,
  "name": "@mikojs/core",
  "license": "MIT",
  "workspaces": ["packages/*"],
  "scripts": {
    "build:base": "yarn lerna exec \"babel src -d lib --delete-dir-on-start --verbose --root-mode upward\" --stream --include-dependencies $(for PACKAGE in $(yarn --silent build:base:scope); do printf \"%s \" \"--scope $PACKAGE\"; done)",
    "build:base:scope": "echo \"@mikojs/miko\"",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "@babel/cli": "^7.13.14",
    "@babel/core": "^7.13.14",
    "@babel/preset-env": "^7.13.12",
    "babel-plugin-add-module-exports": "^1.0.4",
    "core-js": "^3.10.0",
    "eslint": "^7.23.0",
    "eslint-watch": "^7.0.0",
    "flow-bin": "^0.148.0",
    "flow-typed": "^3.3.1",
    "git-branch": "^2.0.1",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lerna": "^4.0.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "prettier-package-json": "^2.1.3"
  },
  "engines": {
    "node": ">= 10.2.1",
    "npm": ">= 6.1.0",
    "yarn": ">= 1.7.0"
  }
}
